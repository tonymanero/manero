{
  "name": "tonymanero/manero",
  "description": "A CLI-Tool to convert DI-config files to disco configurations",
  "keywords" : ["disco", "php", "dependency injection","DI", "zend-expressive", "expressive"],
  "type": "project",
  "license": "MIT",
  "authors": [{
    "name": "Andreas Heigl",
    "email": "andreas@heigl.org"
  }],
  "require": {
    "php": "^7.1",
    "roave/security-advisories": "dev-master",
    "symfony/console": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "mockery/mockery": "^1.0"
  },
  "autoload" : {
    "psr-4" : {
      "Manero\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "ManeroTest\\" : "tests/"
    }
  },
  "bin" : ["bin/manero"],
  "config" : {
    "sort-packages" : true
  },
  "extra": {
    "phar-builder": {
      "compression": "GZip",
      "name": "manero.phar",
      "output-dir": "./build",
      "entry-point": "./bin/manero",
      "include-dev": false,
      "include" : [
        "bin",
        "src"
      ],
      "skip-shebang" : false
    }
  },
  "scripts": {
    "test": "phpunit --color --coverage-text --coverage-clover clover.xml --log-junit junitlogs/`git rev-parse HEAD`.log",
    "buildphar" : "./createPhar.sh"
  }
}
